{% include "common/header.twig" %}

<div class="gui-container">

    {% include "common/heading.twig" %}
    {% include "common/gui-user.twig" %}

    <section class="gui-box">
        <h2>Add object to track</h2>
        <form action="addobj" class="gui-form">
            <label for="name">Object Name</label>
            <input type="text" name="name" id="name" placeholder="up to 64 chars" required>
            <label for="kilometer">Kilometer</label>
            <input type="number" step="0.1" name="kilometer" id="kilometer" placeholder="kilometer">
            <label for="type">Object type</label>
            <select name="type" id="type" required>
                {% for type in types %}
                    <option value="{{type.objectTypeID}}">{{type.objectTypeName}}</option>
                {% endfor %}
            </select>
            <label for="route">Route ID</label>
            <input type="text" name="route" id="route" placeholder="route ID">
            <input type="submit" name="submit" value="Add">
        </form>
    </section>
    <section class="gui-box">
        <ul class="gui-box-menu">
            <li>
                <a class="gui-menu-flatcard" href="/routes">
                    <span class="material-icons">map</span>
                    <p class="menutext">Manage routes</p>
                    <span class="material-icons">keyboard_arrow_right</span>
                </a>
            </li>
            <li>
                <a class="gui-menu-flatcard" href="/profiles">
                    <span class="material-icons">account_circle</span>
                    <p class="menutext">Manage users</p>
                    <span class="material-icons">keyboard_arrow_right</span>
                </a>
            </li>
            <li>
                <a class="gui-menu-flatcard last" href="/management">
                    <span class="material-icons">keyboard_arrow_left</span>
                    <p class="menutext">Management</p>
                    <span class="material-icons">build</span>
                </a>
            </li>

        </ul>
    </section>

    {% include "common/footing.twig" %}
</div>
{% include "common/footer.twig" %}